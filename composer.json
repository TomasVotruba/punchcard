{
    "name": "tomasvotruba/punchcard",
    "description": "Lazy and strict way to configure your Laravel projects",
    "keywords": [
        "laravel",
        "config",
        "punchcard"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^10.0",
        "laravel/framework": "^10.1",
        "nikic/php-parser": "^4.15.3"
    },
    "require-dev": {
        "nunomaduro/collision": "^6.4",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^10.0",
        "rector/rector": "^0.15.18",
        "symplify/easy-ci": "^11.2",
        "symplify/easy-coding-standard": "^11.2"
    },
    "autoload": {
        "psr-4": {
            "TomasVotruba\\PunchCard\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TomasVotruba\\PunchCard\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpstan": "php vendor/bin/phpstan",
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --fix --ansi",
        "rector": "vendor/bin/rector --dry-run --ansi"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "TomasVotruba\\PunchCard\\PunchCardServiceProvider"
            ]
        }
    }
}
