{
    "name": "tomasvotruba/punchcard",
    "description": "Lazy and strict way to configure your Laravel projects",
    "keywords": [
        "laravel",
        "config",
        "punchcard"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.14.0",
        "illuminate/contracts": "^10.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^6.1",
        "nunomaduro/larastan": "^2.0.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^10.0",
        "symplify/easy-ci": "11.2.0.72",
        "symplify/easy-coding-standard": "^11.2"
    },
    "autoload": {
        "psr-4": {
            "TomasVotruba\\PunchCard\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TomasVotruba\\PunchCard\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpstan": "php vendor/bin/phpstan"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "TomasVotruba\\PunchCard\\PunchCardServiceProvider"
            ],
            "aliases": {
                "PunchCard": "TomasVotruba\\PunchCard\\Facades\\PunchCard"
            }
        }
    }
}
